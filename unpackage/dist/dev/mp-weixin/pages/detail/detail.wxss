.common-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.common-list .common-list-item {
  width: 45%;
  font-size: 28rpx;
  margin: 0 22rpx 24rpx 0;
  color: #333;
  background-color: rgba(219, 219, 219, 0.3);
  padding: 8rpx 32rpx 8rpx 30rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
  text-align: center;
}
.common-list .common-list-item .common-list-item-text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.travelTwo-contain {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.travelTwo-contain .card-item {
  width: 48%;
}
.travelTwo-contain .card-container {
  display: flex;
}
.travelTwo-contain .card-container .card-main .card-main-img {
  width: 68rpx;
  height: 68rpx;
}
.travelTwo-contain .card-container .card-other {
  width: 212rpx;
  height: 68rpx;
  padding-left: 54rpx;
  background: url(https://bbs.mihoyo.com/ys/strategy/_nuxt/img/3739438.png);
  background-size: cover;
  display: flex;
  align-items: center;
}
.travelTwo-contain .card-container .card-other .card-other-img {
  width: 44rpx;
  height: 44rpx;
